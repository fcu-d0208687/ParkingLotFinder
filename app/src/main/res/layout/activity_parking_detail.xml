<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parking_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.homeworktest.ParkingDetail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新光三越附設停車場"
            android:id="@+id/PName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="地址:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PName"
            android:layout_marginTop="15dp"
            android:id="@+id/Address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="台中市西屯區市政北七路99號"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Address"
            android:layout_toRightOf="@+id/Address"
            android:layout_toEndOf="@+id/Address"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:id="@+id/textView4" />

        <TextView
            android:text="營業時間:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/BusinessHour"
            android:layout_below="@+id/Address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="11:00 - 22:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_alignBaseline="@+id/BusinessHour"
            android:layout_alignBottom="@+id/BusinessHour"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:text="停車場類型:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Type"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/Address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="室內平面"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Type"
            android:layout_toRightOf="@+id/Type"
            android:layout_toEndOf="@+id/Type"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/textView5" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="目前費率:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:layout_below="@+id/BusinessHour"
                android:layout_alignRight="@+id/BusinessHour"
                android:layout_alignEnd="@+id/BusinessHour"
                android:layout_marginTop="19dp" />

            <TextView
                android:text="早  :  50/hr"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView14" />

            <TextView
                android:text="中 : 100/hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:text="晚 : 100/hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="評價"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_weight="1" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
